<h1><strong>Admin Page</strong></h1>
<br>
<h2>Work Experience</h2>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Job title</th>      
      <th>City</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Job description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company %></td>
        <td><%= job.job_title %></td>
        <td><%= job.city %></td>
        <td><%= job.start_date %></td>
        <td><%= job.end_date %></td><br>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

<br>

<tr><%= link_to 'New Job', new_job_path %></tr>
</tbody>
</table>

<br>
<br>

<h2>Listing portfolios</h2>

<table>
  <thead>
    <tr>
      <th>Project name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.project_name %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>


<br>

<%= link_to 'New Portfolio', new_portfolio_path %>
 </tbody>
</table>

